.b-palete {
    width: 500px;
    height: 500px;
    box-shadow: 0 0 0 2px gray;

    &__item {
        position: relative;
        float: left;
        width: 50px;
        height: 50px;
        color: #fff;
        transition: box-shadow ease 0.15s;

        &:focus,
        &:hover {
            z-index: 2;
            box-shadow: 0 0 0 10px;
        }

        &:focus {
            z-index: 1;
        }
    }
}
