backgroundColor = rgba(255, 255, 255, 0.5);
textBorderColor = rgba(255, 255, 255, 0.5);
borderRadius = 3px;

.b-palette-selected-color__edit {
    position: absolute;
    top: 10px;
    right: 0;
    bottom: 10px;
    left: 0;
    margin: auto;
    padding: 10px;
    width: 35%;
    border-radius: borderRadius;
    background-color: backgroundColor;
    color: #333;
    text-align: center;
    text-shadow: 0 1px 0 textBorderColor;
    font-family: monospace;
    opacity: 0;
    cursor: pointer;
    transition: opacity ease 0.25s;
}
